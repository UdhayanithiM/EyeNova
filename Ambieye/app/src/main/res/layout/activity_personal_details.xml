<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_gradient"
    tools:context=".PersonalDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/createAccountTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_login_card"
                android:padding="24dp">

                <TextView
                    android:id="@+id/personalDetailsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Details"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/ageInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Age"
                    android:inputType="number"
                    android:background="@drawable/bg_login_input"
                    android:paddingStart="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/dobInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Date of Birth (dd-mm-yyyy)"
                    android:inputType="date"
                    android:background="@drawable/bg_login_input"
                    android:paddingStart="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/genderInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Gender"
                    android:background="@drawable/bg_login_input"
                    android:paddingStart="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/fatherNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Father's Name"
                    android:background="@drawable/bg_login_input"
                    android:paddingStart="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/motherNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Mother's Name"
                    android:background="@drawable/bg_login_input"
                    android:paddingStart="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/addressInput"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Address"
                    android:gravity="top"
                    android:background="@drawable/bg_login_input"
                    android:padding="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Security Questions"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp"/>

                <Spinner
                    android:id="@+id/securityQuestion1Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:entries="@array/security_questions"
                    android:background="@drawable/bg_login_input"
                    android:paddingStart="12dp"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/securityAnswer1Input"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Answer 1"
                    android:background="@drawable/bg_login_input"
                    android:paddingStart="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:layout_marginBottom="16dp" />

                <Spinner
                    android:id="@+id/securityQuestion2Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:entries="@array/security_questions"
                    android:background="@drawable/bg_login_input"
                    android:paddingStart="12dp"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/securityAnswer2Input"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Answer 2"
                    android:background="@drawable/bg_login_input"
                    android:paddingStart="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <Button
                        android:id="@+id/backBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Back"
                        android:layout_marginEnd="8dp"/>
                    <Button
                        android:id="@+id/submitBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/submit"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>