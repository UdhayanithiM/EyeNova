<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient"
    tools:context=".ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="24dp"
        android:background="@drawable/bg_glass_card"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/forgotTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/bg_input"
            android:paddingStart="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:layout_marginBottom="16dp" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security Questions"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <Spinner
            android:id="@+id/securityQuestion1Spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:entries="@array/security_questions"
            android:background="@drawable/bg_login_input"
            android:paddingStart="12dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/securityAnswer1Input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Answer 1"
            android:background="@drawable/bg_login_input"
            android:paddingStart="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Spinner
            android:id="@+id/securityQuestion2Spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:entries="@array/security_questions"
            android:background="@drawable/bg_login_input"
            android:paddingStart="12dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/securityAnswer2Input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Answer 2"
            android:background="@drawable/bg_login_input"
            android:paddingStart="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:layout_marginBottom="16dp" />
            
        <!-- Verify Button -->
        <Button
            android:id="@+id/verifyBtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Verify"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_gradient"
            android:layout_marginBottom="20dp" />

        <!-- Back to Login -->
        <TextView
            android:id="@+id/backToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Login"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>