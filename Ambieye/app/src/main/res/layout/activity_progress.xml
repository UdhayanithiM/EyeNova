<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2500D4A3"
    tools:context=".ProgressActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#6789E2"
        app:title="Progress"
        app:titleTextColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Date and Header -->
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuesday, October 28"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4B164C" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here is your progress summary."
                android:textColor="#555555"
                android:layout_marginTop="4dp" />

            <!-- Summary Cards -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="16dp">

                <!-- Games Played -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Games Played"
                            android:textSize="14sp"
                            android:textColor="#4B164C" />

                        <TextView
                            android:id="@+id/tvGamesPlayed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#4B164C" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Avg Score -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg Score"
                            android:textSize="14sp"
                            android:textColor="#4B164C" />

                        <TextView
                            android:id="@+id/tvAvgScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="74"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#4B164C" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Avg Accuracy -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg Accuracy"
                            android:textSize="14sp"
                            android:textColor="#4B164C" />

                        <TextView
                            android:id="@+id/tvAvgAccuracy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="74%"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#4B164C" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <!-- Overall Progress -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overall Progress"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:textColor="#4B164C" />

            <ProgressBar
                android:id="@+id/progressOverall"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:progressTint="#4B164C"
                android:progress="25" />

            <TextView
                android:id="@+id/tvOverallProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 of 12 games completed (25%)"
                android:textColor="#555555"
                android:layout_gravity="end" />

            <!-- Today's Games -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Games"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#4B164C"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:id="@+id/layoutTodayGames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
