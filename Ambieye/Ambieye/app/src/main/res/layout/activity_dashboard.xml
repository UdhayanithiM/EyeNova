<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#6A1B9A"
            android:padding="24dp">

            <TextView
                android:id="@+id/helloText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello,"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/usernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="usertester"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_below="@id/helloText"
                android:layout_marginTop="6dp" />

            <ImageButton
                android:id="@+id/settingsBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_manage"
                app:tint="#FFFFFF"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>

        <!-- Cards Section -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="16dp"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false">

            <!-- Activities -->
            <LinearLayout
                android:id="@+id/cardActivities"
                style="@style/DashboardCard"
                android:background="@drawable/bg_card_blue">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_media_play"
                    app:tint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activities"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eye training games"
                    android:textColor="#777777"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- Progress -->
            <LinearLayout
                android:id="@+id/cardProgress"
                style="@style/DashboardCard"
                android:background="@drawable/bg_card_green">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    app:tint="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track your improvement"
                    android:textColor="#777777"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- Reminders -->
            <LinearLayout
                android:id="@+id/cardReminders"
                style="@style/DashboardCard"
                android:background="@drawable/bg_card_orange">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_lock_idle_alarm"
                    app:tint="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reminders"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set your notifications"
                    android:textColor="#777777"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- Review Dates -->
            <LinearLayout
                android:id="@+id/cardReview"
                style="@style/DashboardCard"
                android:background="@drawable/bg_card_purple">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_month"
                    app:tint="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review Dates"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vision appointments"
                    android:textColor="#777777"
                    android:textSize="13sp"/>
            </LinearLayout>
            
            <!-- Queries -->
            <LinearLayout
                android:id="@+id/cardQueries"
                style="@style/DashboardCard"
                android:background="@drawable/bg_card_red">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_help"
                    app:tint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Queries"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ask your questions"
                    android:textColor="#777777"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- History -->
            <LinearLayout
                android:id="@+id/cardHistory"
                style="@style/DashboardCard"
                android:background="@drawable/bg_card_yellow">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View your past records"
                    android:textColor="#777777"
                    android:textSize="13sp"/>
            </LinearLayout>

        </GridLayout>

    </LinearLayout>

</ScrollView>